<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.ImagePattern?>
<?import javafx.scene.shape.Rectangle?>

<VBox fx:controller="app.musicplayer.controllers.SplashScreenController"
      stylesheets="@/assets/ui/css/SplashScreenScene.css"
      spacing="40"
      alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml/1">

   <padding>
      <Insets top="35.0"/>
   </padding>

   <Rectangle width="300" height="300" arcWidth="70.0" arcHeight="70.0">
      <fill>
         <ImagePattern>
            <image>
               <Image url="@/assets/textures/Logo.png"/>
            </image>
         </ImagePattern>
      </fill>
      <effect>
         <DropShadow />
      </effect>
   </Rectangle>

   <Label styleClass="logoLabel" text="M   U   S   I   F   Y " />

   <VBox alignment="CENTER">
      <Label fx:id="progressLabel" styleClass="progressLabel" prefWidth="400.0" alignment="BASELINE_LEFT" text="Loading library...">
         <padding>
            <Insets left="10.0"/>
         </padding>
      </Label>

      <ProgressBar fx:id="progressBar" prefHeight="45.0" prefWidth="400.0" />
   </VBox>

</VBox>
